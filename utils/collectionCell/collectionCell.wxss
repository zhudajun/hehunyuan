
.courseBackgroundView {
  height: 190rpx;
  width: 100%;
  color: red;
  display: flex;
}

.courseImageView {
  width: 190rpx;
  height: 190rpx;
  background:rgba(225,225,225,1);
  border-radius:8px;
}
.descriptionView {
  display: flex;
  flex-direction: column;
  justify-content:space-between;
}
.detailView {
  display: flex;
  flex-direction: column;
  margin-left: 29rpx;
  margin-right: 29rpx;
}
.courseTitle {
  width: 450rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  color:rgba(51,51,51,1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.courseDetail {
  font-size:26rpx;
  font-family:Adobe Heiti Std;
  color:rgba(153,153,153,1);
}
.bottomView {
  margin-left: 29rpx;
}

.timeText {
  font-size:26rpx;
  font-family:PingFang SC;
  color:rgba(153,153,153,1);
}

.alreadyPlayText {
  margin-left: 60px;
  font-size: 26rpx;
  font-family: PingFang SC;
  color:rgba(153,153,153,1);
}