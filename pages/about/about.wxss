/* pages/about/about.wxss */
@import "/pages/about/aboutCell.wxss";



.backgroudView {
  background: rgba(246,246,246,1);
  width: 100%;
  height: 100%;
  margin: -1px 0px 0px 0px;
  display: flex;
  flex-direction: column;
}
.headerView {
  background: #FF4C5D;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userImage {
  margin-top: 30rpx;
  width:140rpx;
  height:140rpx;
  border-radius:50% !important;
  overflow: hidden;
}


.userDetail {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.userName {
  margin-left: 20px;
  font-size:34rpx;
  font-family:PingFang SC;
  color:rgba(255,255,255,1);
}
.vipImage {
  margin-left: 6rpx;
  width:27rpx;
  height:27rpx;
}

.phoneNumber {
  font-size:26rpx;
  font-family:PingFang SC;
  color:rgba(255,255,255,1);
  margin-bottom: 90rpx;
}